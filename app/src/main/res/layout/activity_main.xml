<?xml version="1.0" encoding="utf-8"?>
<!--
  This XML layout file defines the user interface for the main activity of the JomExplore application.
  It uses a vertical LinearLayout to arrange several buttons that provide access to the app's main features.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Sign In" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="JomExplore"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Button to launch the AI photo recognition feature -->
        <Button
            android:id="@+id/btn_ai_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="AI photo recognition" />

        <!-- Button to view user achievements -->
        <Button
            android:id="@+id/btn_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Achievement" />

        <!-- Button to view the leaderboard -->
        <Button
            android:id="@+id/btn_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Ranking" />

        <!-- Button for point redemption -->
        <Button
            android:id="@+id/btn_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Point Redemption" />

        <!-- Button for Ticket Store -->
        <Button
            android:id="@+id/btn_ticket_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Ticket Store" />

        <!-- Button to open the map view -->
        <Button
            android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map" />
    </LinearLayout>

</RelativeLayout> 